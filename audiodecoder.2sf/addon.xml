<?xml version="1.0" encoding="UTF-8"?>
<addon id="audiodecoder.2sf" version="2.0.3.1" name="2SF Audio Decoder" provider-name="spiff">
  <requires>
    <import addon="kodi.binary.global.main" version="1.0.14"/>
    <import addon="kodi.binary.global.filesystem" version="1.0.2"/>
    <import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/>
  </requires>
  <extension point="kodi.audiodecoder" name="2sf" extension=".2sf|.mini2sf" tags="true" library_linux="audiodecoder.2sf.so.2.0.3"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Nintendo DS audio file decoder</summary>
    <description lang="en">To support game audio file used by some Nintendo DS games.

Dual Screen Sound Format is an audio format based on PSF. It stores audio ripped from the ROMs of Nintendo DS games. Music instructions are stored in files with a .2sflib extension and the music notation is stored in files with a .mini2sf extension.</description>
    <platform/>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/audiodecoder.2sf</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
