<?xml version="1.0" encoding="UTF-8"?>
<addon id="audiodecoder.organya" version="1.2.1.1" name="Org Audio Decoder" provider-name="spiff">
  <requires>
    <import addon="kodi.binary.global.main" version="1.0.14"/>
    <import addon="kodi.binary.global.general" version="1.0.3"/>
    <import addon="kodi.binary.global.filesystem" version="1.0.2"/>
    <import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/>
  </requires>
  <extension point="kodi.audiodecoder" name="org" extension=".org" tags="true" library_linux="audiodecoder.organya.so.1.2.1"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Organya Audio Decoder</summary>
    <description lang="en">Organya is a music format used in "Cave Story", created by the Japanese programmer "Pixel". As well as being used in the original game, there is a large and active Cave Story fan community which creates music in this format, both for standalone to play and for use in mods for the game.

This addon allows playing of .ORG files for this format.</description>
    <platform/>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/audiodecoder.organya</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
